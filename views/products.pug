doctype html
html
  head
    style.
      table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
      }
      td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
      }
      tr:nth-child(even) {
      background-color: #dddddd;
      }
  body
    h2 Products List
    table
          thead
            tr
              th Title
              th Discriptions
              th Price
              th Edit
              th Delete
          tbody
              each product in allProducts
                 tr
                      td #{product.title}
                      td #{product.description}
                      td #{product.price}
                      td
                          a(href="/products/edit/"+product._id)
                              |Edit
                      td
                          a(href="/products/delete/"+product._id title="Delete" onclick="return confirm(\'Are you sure you want to delete this product?\');")
                              |Delete
              //td
                a.add(title='Add', data-toggle='tooltip')
                  i.material-icons 
                a.edit(title='Edit', data-toggle='tooltip')
                  i.material-icons 
                a.delete(title='Delete', data-toggle='tooltip')
                  i.material-icons 
              

            

